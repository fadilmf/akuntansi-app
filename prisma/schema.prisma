generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id        Int     @id @default(autoincrement())
  name      String
  category  String?
  unit      String?
  stock     Int?
  status    String?
  salesList Sales[]
}

model Sales {
  id               Int       @id @default(autoincrement())
  invoiceNumber    String
  salesOrderNumber String
  deliveryNumber   String
  poNumber         String
  date             DateTime
  customer         String
  termOfPayment    String
  subject          String
  notes            String?
  amount           Int?
  bill             Int?
  status           String?
  productList      Product[]
}
